.notice
  font-size 12px
  padding 10px 35px 10px 15px
  margin-bottom 15px
  background-color: #f5f5f5;
  border: 1px solid #e3e3e3;
  color inherit
.category-tree
  margin 0
  padding 0
  ul
    margin 0
    padding 0 0 0 14px
  li
    list-style-type none
  a
    cursor pointer
  li:before
    margin-right 5px
  .has-children:before
    font-family FontAwesome
    content "\f0fe"
    // content "\f196"
    cursor pointer
  .has-children.open:before
    font-family FontAwesome
    content "\f146"
    // content "\f147"
    cursor pointer
  .no-children:before
    // margin-left 10px
    font-family FontAwesome
    content "\f00e"
  .selected
    color #d9534f
    font-weight 600
  .count
    margin-left 5px
  .open > li
    margin-left 5px
    display inherit
  .closed li
    display none
