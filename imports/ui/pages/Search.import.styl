body
  font-family 'Open Sans', sans-serif
  font-size 16px
  background #efefef

a
  color #444

a:hover
  text-decoration none
  color #c79000

a:active, a:focus
  text-decoration none
  color #444

h1
  font-size 40px
  font-weight 300

h3
  font-size 18px
  font-weight bold

ul
  padding-left 20px

.navbar
  box-shadow 0px 0px 6px 0px rgba(0,0,0,0.2)
  background-color #FFF
  padding-bottom 15px

footer
  margin-top 40px
  color #898787

aside
  border-left 1px solid #7E7E7E
  padding-left 20px
  h2
    font-size 16px
    font-weight 300
    text-transform uppercase
    color #333
    margin-top 5px
    margin-bottom 15px

.at-title h3
  font-weight 300
  font-size 36px
  margin-bottom 40px
  background url('/images/search_logo.png') no-repeat 50% 0
  padding-top 70px

+below($tabletCutOff)
  h1
    margin-top 0
  aside
    margin-top 20px
    border-left none
    padding-left 0
